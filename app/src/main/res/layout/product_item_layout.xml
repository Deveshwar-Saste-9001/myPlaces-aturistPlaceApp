<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:background="@color/white"
    android:layout_marginEnd="15dp"
    android:orientation="vertical"
    app:cardElevation="15dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_Name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/product_Photos1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_Name1"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/tajmahalagra" />

        <TextView
            android:id="@+id/product_Description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_Photos1"
            android:layout_marginTop="10dp"
            android:text="Product Description"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/product_Price1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_Description1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"

            android:text="Product Price"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold"

            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>
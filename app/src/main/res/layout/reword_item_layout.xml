<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/border_background">

    <ImageView
        android:id="@+id/coupen_icon_reowrd1"
        android:layout_width="25.0dip"
        android:layout_height="25.0dip"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:src="@drawable/ic_card_giftcard_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#ffffffff" />

    <TextView
        android:id="@+id/coupen_title_reword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:text="Discount Coupen"
        android:textColor="#ffffffff"
        android:textSize="16.0sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/coupen_icon_reowrd1"
        app:layout_constraintStart_toEndOf="@id/coupen_icon_reowrd1"
        app:layout_constraintTop_toTopOf="@id/coupen_icon_reowrd1" />

    <TextView
        android:id="@+id/coupen_validity_reword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:background="#ffffffff"
        android:padding="3.0dip"
        android:text="till 13th dec 2019"
        android:textColor="#ff4408e9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coupen_body_reword1"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.0dip"
        android:layout_marginTop="16.0dip"
        android:layout_marginEnd="16.0dip"
        android:layout_marginBottom="8dp"
        android:text="get 20% off on any product above Rs. 500/- and below Rs. 2500/-"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coupen_title_reword1" />
</androidx.constraintlayout.widget.ConstraintLayout>